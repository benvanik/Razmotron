<UserControl x:Class="Razmotron.Test.Sample3.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:raz="clr-namespace:Razmotron.Controls;assembly=Razmotron.Silverlight"
    Width="800" Height="600">
    <Grid x:Name="LayoutRoot" Background="Red">
        <raz:RenderSurfaceControl x:Name="Surface"
                                  HorizontalAlignment="Left" VerticalAlignment="Top">
        </raz:RenderSurfaceControl>
        <TextBlock x:Name="fpsTextBlock"
                   Width="400" Height="20"
                   FontSize="10" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="5,5,0,0"/>
    </Grid>
</UserControl>
